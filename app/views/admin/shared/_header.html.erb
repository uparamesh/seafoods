<header id="header"><!--header-->
	<div class="header-middle"><!--header-middle-->
		<div class="container">
			<div class="row">
				<div class="col-sm-4">
					<div class="logo pull-left">
						<a href="index.html"><img src="../assets/logo2.png" alt="Seafoods" /></a>
					</div>
				</div>
				<div class="col-sm-8">
					<div class="shop-menu pull-right">
						<ul class="nav navbar-nav">
							<li><a href=""><i class="fa fa-star"></i> Orders</a></li>
							<li><%= link_to "Products", admin_products_path %></li>
							<li><a href=""><i class="fa fa-user"></i> Profile</a></li>
							<li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div><!--/header-middle-->
	<div class="header-bottom"><!--header-bottom-->
		<div class="container">
			<div class="row">
				<div class="col-sm-9">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
					</div>
					<div class="mainmenu pull-left">
						<ul class="nav navbar-nav collapse navbar-collapse">
							<li><%= link_to "Categories", admin_categories_path %></li>
							<li><a href="#">Contact</a></li>
						</ul>
					</div>
				</div>
				<div class="col-sm-3">
					<% if params[:controller] == "admin/categories" %>
						<div class="search_box pull-right">
							<%= link_to "New", new_admin_category_path, class: "btn btn-default add-to-cart", title: "Create category" %>
						</div>
					<% else %>
						<div class="search_box pull-right">
							<input type="text" placeholder="Search"/>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</header>